<%= form_for [:admin, @attendee] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @attendee,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :first_name -%>
    <%= f.text_field :first_name, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :last_name -%>
    <%= f.text_field :last_name -%>
  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>
  
  <div class='field'>
    <%= f.label :street_address -%>
    <%= f.text_field :street_address -%>
  </div>
  
  <div class='field'>
    <%= f.label :apt_suite_other -%>
    <%= f.text_field :apt_suite_other -%>
  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>
  
  <div class='field'>
    <%= f.label :region -%>
    <%= f.text_field :region -%>
  </div>
  
  <div class='field'>
    <%= f.label :postal_code -%>
    <%= f.text_field :postal_code -%>
  </div>
  
  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country -%>
  </div>
  
  <div class='field'>
    <%= f.label :country_code -%>
    <%= f.text_field :country_code -%>
  </div>
  
  <div class='field'>
    <%= f.label :phone_number -%>
    <%= f.text_field :phone_number -%>
  </div>
  
  <div class='field'>
    <%= f.label :company -%>
    <%= f.text_field :company -%>
  </div>
  
  <div class='field'>
    <%= f.label :gender -%>
    <%= f.text_field :gender -%>
  </div>
  
  <div class='field'>
    <%= f.label :website -%>
    <%= f.text_field :website -%>
  </div>
  
  <div class='field'>
    <%= f.label :latitude -%>
    <%= f.text_field :latitude -%>
  </div>
  
  <div class='field'>
    <%= f.label :longitude -%>
    <%= f.text_field :longitude -%>
  </div>
  
  <div class='field'>
    <%= f.label :email_opt_in -%>
    <%= f.check_box :email_opt_in -%>
  </div>
  
  <div class='field'>
    <%= f.label :newsletter_opt_in -%>
    <%= f.check_box :newsletter_opt_in -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.attendees.attendee'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @attendee.first_name)
              } %>
<% end -%>
