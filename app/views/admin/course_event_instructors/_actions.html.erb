<ul>
  <% if Admin::CourseEventInstructorsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_course_event_instructors_url
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_course_event_instructor_url,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::CourseEventInstructorsController.sortable? and CourseEventInstructor.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Course Event Instructors"),
                 admin_course_event_instructors_url,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Course Event Instructors"),
                 admin_course_event_instructors_url,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>