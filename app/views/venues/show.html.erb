<% content_for :body_content_title do %>
  <%= @venue.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @venue.name %>
    </p>
  </section>
  <section>
    <h1>Street Address</h1>
    <p>
      <%=raw @venue.street_address %>
    </p>
  </section>
  <section>
    <h1>Apt Suite Other</h1>
    <p>
      <%=raw @venue.apt_suite_other %>
    </p>
  </section>
  <section>
    <h1>City</h1>
    <p>
      <%=raw @venue.city %>
    </p>
  </section>
  <section>
    <h1>Region</h1>
    <p>
      <%=raw @venue.region %>
    </p>
  </section>
  <section>
    <h1>Postal Code</h1>
    <p>
      <%=raw @venue.postal_code %>
    </p>
  </section>
  <section>
    <h1>Country</h1>
    <p>
      <%=raw @venue.country %>
    </p>
  </section>
  <section>
    <h1>Country Code</h1>
    <p>
      <%=raw @venue.country_code %>
    </p>
  </section>
  <section>
    <h1>Phone Number</h1>
    <p>
      <%=raw @venue.phone_number %>
    </p>
  </section>
  <section>
    <h1>Contact Name</h1>
    <p>
      <%=raw @venue.contact_name %>
    </p>
  </section>
  <section>
    <h1>Latitude</h1>
    <p>
      <%=raw @venue.latitude %>
    </p>
  </section>
  <section>
    <h1>Longitude</h1>
    <p>
      <%=raw @venue.longitude %>
    </p>
  </section>
  <section>
    <h1>Max Capacity</h1>
    <p>
      <%=raw @venue.max_capacity %>
    </p>
  </section>
  <section>
    <h1>Min Capacity</h1>
    <p>
      <%=raw @venue.min_capacity %>
    </p>
  </section>
  <section>
    <h1>Website</h1>
    <p>
      <%=raw @venue.website %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="venues">
      <% @venues.each do |venue| %>
        <li>
          <%= link_to venue.name, venue_url(venue) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
